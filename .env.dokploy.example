# Dokploy Environment Variables Template
# Copy this to Dokploy's environment editor and update with your values

# Core Configuration
NODE_ENV=production
PORT=3002
TRUST_PROXY=true
WEBHOOK_URL=https://claude.perfux.dev

# Authentication - REQUIRED
ANTHROPIC_API_KEY=sk-ant-your-key-here
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=generate-a-strong-secret-here
CLAUDE_API_SECRET=generate-another-strong-secret-here

# Bot Configuration
BOT_USERNAME=@ClaudeBot
BOT_EMAIL=claude@perfux.dev
AUTHORIZED_USERS=your-github-username,other-authorized-user
DEFAULT_GITHUB_OWNER=your-github-org-or-username
DEFAULT_AUTHORIZED_USER=your-github-username

# Claude Container Configuration
CLAUDE_USE_CONTAINERS=1
CLAUDE_CONTAINER_IMAGE=claudecode:latest
CLAUDE_AUTH_HOST_DIR=/claude-auth
BASH_DEFAULT_TIMEOUT_MS=600000
BASH_MAX_TIMEOUT_MS=1200000

# GitHub Repository (for pulling images)
GITHUB_REPOSITORY=eugeneistrach/claude-hub

# PR Review Configuration
PR_REVIEW_WAIT_FOR_ALL_CHECKS=true
PR_REVIEW_TRIGGER_WORKFLOW=
PR_REVIEW_DEBOUNCE_MS=5000
PR_REVIEW_MAX_WAIT_MS=1800000
PR_REVIEW_CONDITIONAL_TIMEOUT_MS=300000

# Discord Integration (Optional)
DISCORD_APPLICATION_ID=
DISCORD_BOT_TOKEN=
DISCORD_PUBLIC_KEY=
DISCORD_CHANNEL_ID=
DISCORD_AUTHORIZED_USERS=

# Vercel Integration (Optional)
VERCEL_TOKEN=